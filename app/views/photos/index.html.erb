<div class="container">
      <%= link_to 'New Photo', new_photo_path, class: "btn btn-success btn-lg"%>
      <h1><%= "#{@user}'s Photos"%> </h1>

      <div class="row">
          <% @photos.each do |photo| %>
          <div class="col-sm-6 col-md-4">
              <div><h1><small> <%= photo.title %></small></h1></div>
              <%= image_tag photo.photo_url(:thumb), class: "img-thumbnail responsive" if photo.photo?%>
              <p><%= photo.description %></p>
              <!-- Edit Delete And Show Buttons -->
                <span><%= link_to 'Show', photo, class:"btn btn-default" %></span>
                <span><%= link_to 'Edit', edit_photo_path(photo), class:"btn btn-info" %></span>
                <span><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></span>
            </div>
            <% end %>
      </div>
</div>
