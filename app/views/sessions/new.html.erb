
<h1>Please Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
    <%=label_tag :password %>
    <%=password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Log In"%>
  </div>

  <%end%>
