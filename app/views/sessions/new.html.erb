<div class="login-banner container-fluid">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="form-group">
        <h2 class="font-white">Please Log In</h2>
        <%= form_tag sessions_path do %>
          <div class="field">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <%= label_tag :email %>
            <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
          </div>

        <div class="field">
          <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
          <%=label_tag :password %>
          <%=password_field_tag :password, nil, class: 'form-control', placeholder: "Password"%>
        </div>

        <div class="actions">
          <%= submit_tag "Log In", class: 'btn btn-primary'%>
        </div>
        <%end%>
      </div>

    </div>
  </div>
  </div>
